<% status = @user.send("expand_#{number}_clicked")
if status != nil && !status.even?
  div_expanded_status = "display: block;"
else
  div_expanded_status = "display: none;"
end
%>

<div id="expand_page<%= @number%>" class="expand_page" style="<%= div_expanded_status %>">  
  <div id="expand_field<%= @retweet_status %><%=@number%>" class="expand_field<%= @retweet_status %>">
    <!--
    <div class="expanded_actions">
      <%= 
      #render :partial => "actions", :locals => {:number => @number, :message_commands => @message_commands} 
      %>
    </div>
    -->
    <div id="time" class="time">
      <%= Time.now.strftime("%I:%M %p - %d %b %y via web") %>
    </div>
    <% if @number == 1 %>
    <% if @user.seen_retweet_message1 %>
    <div id="tweeter_name_at_ut">Reply to <%= @user.displayed_person1 %>
    </div>
    <div id="reply_ut"
    onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "reply_time_m#{number}"}) %>"
    onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "reply_time_m#{number}"}) %>">
    <%= link_to_remote image_tag('../images/platzhalter_reply.png'),
    :url => {:action => "reply#{@number}", :id => @user.id,  :number => @number}
    %>
  </div>
  <%else%>
  <div id="tweeter_name_at_ut2">Reply to <%= @user.displayed_person1 %></div>
  <div id="reply_ut2"
  onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "reply_time_m#{number}"}) %>"
  onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "reply_time_m#{number}"}) %>">
  <%= link_to_remote image_tag('../images/platzhalter_reply.png'),
  :url => {:action => "reply#{@number}", :id => @user.id,  :number => @number}
  %>
</div>
<% end %>
<% end %>
<% if @number == 2 %>
<div id="tweeter_name_at_ut2">Reply to <%= @user.displayed_person2 %></div>
<div id="reply_ut2"
onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "reply_time_m#{number}"}) %>"
onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "reply_time_m#{number}"}) %>">
<%= link_to_remote image_tag('../images/platzhalter_reply.png'),
:url => {:action => "reply#{@number}", :id => @user.id,  :number => @number}
%>
</div>
<% end %>

</div>
</div>
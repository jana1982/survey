 render :partial => "retweet",  :locals => {:retweet => @user.seen_retweet_message1, :number => @number, :retweet_status => @retweet_status, :message_commands => @message_commands}
else
render :partial => "retweeted",  :locals => {:retweet => @user.seen_retweet_message1, :number => @number, :retweet_status => @retweet_status, :message_commands => @message_commands}
end%>-->
  

 <div id = "favorite<%=expand %><%= number %>" class="favorite"    
    onmouseover="<%= remote_function(:update => '', :url => {:action => :start_measure, :type => "favorite_time_m#{number}"}) %>"
    onmouseout="<%= remote_function(:update => '', :url => {:action => :end_measure, :type => "favorite_time_m#{number}"}) %>"
    >
  <%= link_to_remote image_tag("../images/favorite#{clicked}#{grey}.png",
       :mouseover => "../images/favorite_unterstrichen#{grey}.png"),
       :url => {:action => "favorite", :id => @user.id,   :number => number}
  %>
 </div>

           
</div>
  
 
  

<div id="compose_tweet_field">

    <div id="text_compose">
    <%= observe_field :tweet_text, :frequency => 1,
      :function => "$('tweet_text').value.length" %> 
    <%= f.text_area :tweet_text, :cols => 32, :rows => 5, :maxlength => 140 %>
    </div>
    <div id="charcount_c"> <span id="char-countc">140</span></div>

    <div id="tweet_button_change_compose" style="display: none;">
            <%= link_to_remote image_tag('../images/compose_tweet_button.png',
                :mouseover => '../images/compose_tweet_button_mouseover.png'),
                :loading  => "$('tweet_sent').show(); $('tweet_sent').fade()",
                  :url => {:action => "close", :id => @user.id}
            %>
   
  </div>
</div>

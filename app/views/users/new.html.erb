
<% title "" %>
<% form_for @user do |f| %>
  <%= f.error_messages %>
  <%= render "#{@user.current_step}_step", :f => f %>
      <Table width="100%">
        <tr>
          <td align="left">
            <% if @user.first_step? %>
            <img id="unilogo" height="100" src='../images/universitaet-st-gallen_-_Logo.jpg'>
              <% end %>
            <% if @user.twitter_step? %>
            <%= f.submit "Back to last questions", :name => "back_button" unless @user.first_step?  %>
            <%else%>
            <%= f.submit "Back", :name => "back_button" unless @user.first_step?  %>
            <%end %>
          </td>
          <td align="right">
            <% if @user.twitter_step? %>
              <%= f.submit "End simulation" %>
              <% elsif @user.first_step? %>
              <%=f.submit "Start survey now!",:class=>"css3button" %>
              <%else%>
              <%=f.submit "Continue"%>
            <%end %>
          </td>
        </tr>
      </Table>
<% end %>


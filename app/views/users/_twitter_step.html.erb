 <TABLE width="100%">
    <TR>    
      <TD ALIGN="LEFT" nowrap>
        <h2>Part IV: Twitter Simulation</h2>    
      </TD>        
      <TD ALIGN="RIGHT" width=400px >
        <%= progress_bar("my_sixty_percent_progress_bar",0.80,true,true) %>
      </TD>  
    </TR>
  </TABLE>
  
  <div id="seite_plane">
    <div id="left_twitter"></div>  
    <!--Mittlere Twitterseite-->
    <div id="seite_twitter">
      <%= render "leiste_oben", :f => f  %>
      <%= render "leiste_links", :f => f  %>
      <!--In der Message werden die Tweets Angezeigt -->      
      <%= render "message_box", :f => f  %>
      <!--<%= render "end_of_tweets"  %>-->
      <!--Layer über der Twitterseite-->      

    </div>

    <div id="right_twitter"></div>
  </div>
  
  <!--Gesamter Twitter Screen-->
  <div id="connect_page" style="display: none;">
        <%= render "connect_page", :f => f  %> 
  </div>
  <div id="tweet_sent" style="display: none;">Your Tweet has been sent!</div>
  <div id="new_tweet_seite" style="display: none;">
    <%= render "new_tweet_seite", :f => f  %>
  </div>
  <div id="reply_seite" style="display: none;">
    <%= render "reply_seite", :f => f  %> 
  </div>
    <div id="reply_seite2" style="display: none;">
    <%= render "reply_seite2", :f => f  %> 
  </div>  
</div>
<%=f.hidden_field :mousetracks, :value => "0" %>

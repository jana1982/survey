</script>
<%end%>

    </div>

    <div id="right_twitter"></div>
  </div>
  
  <!--Gesamter Twitter Screen-->
  
  <div id="tweet_sent" style="display: none;">Your Tweet has been sent!</div>
  <div id="new_tweet_seite" style="display: none;">
    <%= render "new_tweet_seite", :f => f  %>
  </div>
  <div id="reply_seite" style="display: none;">
    <%= render "reply_seite", :f => f  %> 
  </div>
  <div id="reply_seite2" style="display: none;">
    <%= render "reply_seite2", :f => f  %> 
  </div>

  
</div>
<div id="link_website" style="display: none;">
    <%= render "link_website", :locals => {:f => f, :headline => @user.seen_headline, :message_long => @user.seen_message_long} %>
  </div>
<div id="mousetracks"><%=f.hidden_field :mousetracks, :value => "#{@user.mousetracks}" rescue "" %></div>

<%= observe_form :mousetracks, :url => { :action => :save_mousetracks }, :frequency => 2 %>
